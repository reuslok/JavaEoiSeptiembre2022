package euromillones;

import java.util.Random;

public class CombinacionGanadora {
	private static boolean repetido=false;
	private static int [] numerosRandom=new int[5];
	private static int [] estrellasRandom=new int[2];
	public static void Combinacion() 
		{

		int numeroRandom;
		int estrellaRandom;
		Random random=new Random();
		
		for(int i=0;i<numerosRandom.length;i++) {
			
			numeroRandom= random.nextInt(1, 51);
			
			for(int numeroActual:numerosRandom) {
				
				if(numeroActual==numeroRandom) {
					repetido= true;
				}
					
				}
			if(!repetido)
			{
				numerosRandom[i]= numeroRandom;
			}
			repetido=false;
			System.out.println(numerosRandom[i]);
		}
		for(int i=0;i<estrellasRandom.length;i++) {
			
			estrellaRandom= random.nextInt(1, 13);
			
			for(int numeroActual:estrellasRandom) {
				
				if(numeroActual==estrellaRandom) {
					repetido= true;
				}
					
				}
			if(!repetido)
			{
				estrellasRandom[i]= estrellaRandom;
			}
			repetido=false;
			System.out.println(estrellasRandom[i]);
		}
		
	}
	public static int[] getNumerosRandom() {
		return numerosRandom;
	}
	public static int[] getEstrellasRandom() {
		return estrellasRandom;
	}
}
