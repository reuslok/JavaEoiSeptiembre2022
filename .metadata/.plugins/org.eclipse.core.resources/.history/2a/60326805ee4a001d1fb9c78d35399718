package euromillones;

import java.util.Random;

public class Combinacion {
	private static boolean repetido=false;
	private static int [] total= new int[7];
	public static int[] Combinacion() 
		{
		int numeroRandom;
		
		Random random=new Random();
		
		for(int i=0;i<total.length;i++) {
			if(i<5) {
				numeroRandom= random.nextInt(1, 51);
			}
			else
				numeroRandom= random.nextInt(1, 51);
			
			for(int numeroActual:total) {
			
				if(numeroActual==numeroRandom) {
					
				repetido= true;
				}
			}
			if(!repetido)
			{
				total[i]= numeroRandom;
			}
			repetido=false;
			System.out.println(total[i]);
		}
		
		
		return total;
		
	}
	
	public static int[] getNumerosRandom() {
		return total;
	}
}
