package cajeroautomatico;

import java.util.Scanner;

public class CajeroAutomatico {
	

	public static boolean initializated=false;
	public static boolean login=false;
	public static Titular[] titulares=new Titular[3];
	static Cuenta[] cuentas= {
			new Cuenta("pepe", "pep", "cocoloco", 1+12341),
			new Cuenta("paco", "pac", "conoloco", 2+1234124),
			new Cuenta("pedro", "ped", "pedoloco", 3+313124)
	};
	public static void main(String[] args) 	{	
	
		if(!initializated) 
			initializated=InitData();	
		
		if(!(login))
			login=Login();
		
	}
	
	public static boolean InitData() { 
		for(int i=0;i<titulares.length;i++) {
			
			titulares[i]=cuentas[i];
		}
			
			return true;
		}
	public static boolean Login() {
		String usuario;
		String contraseña;
		Scanner sc= new Scanner(System.in);
		boolean loginValido=false;
		
		do {
			System.out.println("introduzca el nombre de usuario");
			usuario = sc.nextLine();
			System.out.println("introduzca la contraseña");
			contraseña = sc.nextLine();
			for(Cuenta cuenta:cuentas) {
				if(cuenta.getUsuario()==usuario)
					if(cuenta.getContraseña()==contraseña) {
						System.out.println("bienvenido" + cuenta.getNombre());
						loginValido=true;
					}
					else {
						System.out.println("El nombre o contraseña son incorrectos por favor intentelo de nuevo");
					}
			}
		}
		while(loginValido==false);
		
	return true;
	}
}
